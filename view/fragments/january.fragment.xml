<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:absControl="chris.calendar.control">
	<Dialog type="Message" title="🍎 Januar 2021 🍎" class="sapUiPopupWithPadding" afterClose="onEntryCancel">
		<content>
			<VBox>
				<FormattedText width="100%" htmlText="{jan>/HTML}" />
				<HBox width="100%">
					<Image width="100%" src="theme/img/january.gif" />
				</HBox>
			</VBox>
		</content>
		<buttons>
			<Button icon="sap-icon://accept" type="Transparent" press="onClosePress" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>